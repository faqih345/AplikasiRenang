<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context=".MenuKuis">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/skor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Score :"
            android:textColor="#3B50FF"
            android:textSize="23sp"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:id="@+id/nilaiSkor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="0"
            android:textSize="30sp"
            android:textColor="#3B50FF"
            android:textStyle="bold"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtPertanyaan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ini Adalah Pertanyaan"
            android:textColor="#3B50FF"
            android:textStyle="bold"
            android:fontFamily="@font/babyblue"
            android:textSize="30dp"
            android:layout_marginTop="60dp"
            android:textAlignment="center"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Choise 1"
            android:textColor="@color/light_dark"
            android:background="@drawable/bt1_anim"
            android:id="@+id/btnChoise1"
            android:layout_marginTop="50sp"
            android:textStyle="bold"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Choise 2"
            android:textColor="@color/light_dark"
            android:background="@drawable/bt1_anim"
            android:id="@+id/btnChoise2"
            android:layout_marginTop="20sp"
            android:textStyle="bold"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Choise 3"
            android:textColor="@color/light_dark"
            android:background="@drawable/bt1_anim"
            android:id="@+id/btnChoise3"
            android:layout_marginTop="20sp"
            android:textStyle="bold"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Choise 4"
            android:textColor="@color/light_dark"
            android:background="@drawable/bt1_anim"
            android:id="@+id/btnChoise4"
            android:layout_marginTop="20sp"
            android:textStyle="bold"/>
    </LinearLayout>

</RelativeLayout>