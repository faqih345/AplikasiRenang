<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context=".HasilKuis">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#3B50FF"
            android:textStyle="bold"
            android:fontFamily="@font/babyblue"
            android:textSize="70dp"
            android:text="Hasil Skor :"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/skor"
            android:textColor="#3B50FF"
            android:textStyle="bold"
            android:fontFamily="@font/babyblue"
            android:textSize="100dp"
            android:text="Skor"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginTop="50dp"
            android:id="@+id/ulang"
            android:textSize="30dp"
            android:textStyle="bold"
            android:background="@drawable/bt2_anim"
            android:textColor="#3B50FF"
            android:fontFamily="@font/babyblue"
            android:text="Ulang Kuis"
            android:onClick="ulang"/>
        <Button
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginTop="50dp"
            android:id="@+id/menuutama"
            android:textSize="30dp"
            android:textStyle="bold"
            android:background="@drawable/bt2_anim"
            android:textColor="#3B50FF"
            android:fontFamily="@font/babyblue"
            android:text="Manu Awal"
            android:onClick="menuAwal"/>

    </LinearLayout>

</RelativeLayout>