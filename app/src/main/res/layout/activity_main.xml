<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Aplikasi Informasi"
            android:textColor="#ffffff"
            android:textSize="40sp"
            android:layout_marginTop="50dp"
            android:textStyle="bold"
            android:fontFamily="@font/babyblue"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Olahraga Renang"
            android:textColor="#ffffff"
            android:textSize="60sp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:fontFamily="@font/babyblue"/>

        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_margin="30dp"
            android:layout_gravity="center"
            android:background="@drawable/logo"/>

        <Button
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:onClick="pindah"
            android:text="Masuk"
            android:textSize="25sp"
            android:textStyle="bold"
            android:fontFamily="@font/babyblue"
            android:textColor="@color/light_dark"
            android:background="@drawable/bt1_anim"/>


        <ToggleButton
            android:id="@+id/sounds"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            android:checked="true"
            android:textOff="Backsound : off"
            android:textOn="Backsound : on"
            android:textSize="25sp"
            android:textStyle="bold"
            android:fontFamily="@font/babyblue"
            android:textColor="@color/light_dark"
            android:background="@drawable/bt1_anim"/>
    </LinearLayout>

</RelativeLayout>